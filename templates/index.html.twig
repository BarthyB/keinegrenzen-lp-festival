                    </div>
                </noscript>
            </section>
        </main>
        {% block javascripts %}
            <script src="{{ asset('build/js/theme.js') }}" type="text/javascript"></script>
            <script type="text/javascript" src="https://tickets.keinegrenzen.org/widget/v1.de.js" async></script>
        {% endblock %}
    </body>
</html>
